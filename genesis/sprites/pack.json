{
  "id": "default_pack",
  "version": "0.1.0",
  "render": {
    "canvas": { "width": 1920, "height": 1080 },
    "sprite": { "frameWidth": 24, "frameHeight": 36 },
    "scale": 10,
    "smoothing": false,
    "anchor": { "x": 0.5, "y": 1.0 }
  },
  "progression": {
    "stages": [
      { "id": 0, "variants": [ { "when": {}, "sprite": "stage0/SoulSheet.png" } ] },
      { "id": 1, "variants": [
        { "when": { "alignment": "light" }, "sprite": "stage1/1LightSheet.png" },
        { "when": { "alignment": "dark" }, "sprite": "stage1/1DarkSheet.png" }
      ] },
      { "id": 2, "variants": [
        { "when": { "alignment": "lightphysical" }, "sprite": "stage2/2LightPhysic.png" },
        { "when": { "alignment": "darkphysical" }, "sprite": "stage2/2DarkPhysic.png" },
        { "when": { "alignment": "magic" }, "sprite": "stage1/1DarkSheet.png" }
      ] }
    ]
  },
  "animations": {
    "format": { "type": "grid", "columns": 4, "rows": 4 },
    "clips": {
      "idle": { "row": 0, "frames": [0,1,2,3], "fps": 3, "loop": true },
      "idle_alt": { "row": 1, "frames": [0,1,2,3], "fps": 2, "loop": true },
      "sleep": { "row": 2, "frames": [0,1,2,3], "fps": 2, "loop": true }
    },
    "behavior": {
      "idleMix": [ { "clip": "idle", "weight": 0.7 }, { "clip": "idle_alt", "weight": 0.3 } ],
      "sleepAfterSeconds": 180
    }
  }
}
